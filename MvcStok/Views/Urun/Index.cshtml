@using MvcStok.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<a href="/URUN/YeniUrun" class="btn btn-primary">Yeni Ürün Ekle</a>
<br>
<br>
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün  ADI</th>
            <th>Markası</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sts in Model)
        {
            <tr>
                <th>@sts.URUNID</th>
                <td>@sts.URUNAD</td>
                <td>@sts.MARKA</td>
                <td>@sts.TBLKATEGORILER.KATEGORIAD</td>
                <td>@sts.FIYAT</td>
                <td>@sts.STOK</td>
                <td><a href="/URUN/SIL/@sts.URUNID" class="btn btn-danger">SİL</a></td>
                <td><a href="/URUN/UrunGetir/@sts.URUNID" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />

<script>
    $('#tbl1').dataTable({
        "lengthMenu": [[1,3,5,10, 25, 50, -1], [1,3,5,10, 25, 50, "All"]]
    });
</script>